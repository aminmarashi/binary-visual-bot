<!DOCTYPE html>
<html>
<head>
	{{> security }} {{> head }}
	<title>Binary Bot</title>
	{{> bundle_css }} {{> bot_css }}
	<link rel="stylesheet" href="https://style.binary.com/binary.css"> {{> ie }}
</head>
<body>
	<div id="center"></div>
	<div id="blocker"></div>
	{{> loading }}
	<div id="topbar">
		<div class="right-header">
			{{> language }}
			<select id="tours">
        <option value="" data-i18n-text="Select a Tour"></option>
	      <option value="welcome" data-i18n-text="Welcome!"></option>
	      <option value="introduction" data-i18n-text="Introduction"></option>
	      <option value="makeSimpleStrategy" data-i18n-text="1. Make a simple strategy"></option>
	    </select>
		</div>
	</div>
	<div id="header">
		<div class="left-header">
			<div class="logo-wrapper">
				<a href="" id="logo">
					<div class="logo-parent">
						<div class="logo">
							<img class="responsive" src="https://style.binary.com/images/logo/symbol.svg" alt="Binary-logo" />
						</div>
						<div class="binary-logo-text">
							<img class="responsive" src="https://style.binary.com/images/logo/type.svg" alt="Binary-logo">
						</div>
					</div>
				</a>
			</div>
		</div>
		<div class="middle-header">
			<button title="Load the blocks as an XML file" id="loadXml" class="icon-browse group-save">
				<span data-i18n-text="Open"></span>
			</button>
			<button title="Save the blocks as an XML file" id="saveXml" class="icon-save group-save">
				<span data-i18n-text="Save"></span>
			</button>
			<button title="Run the blocks" id="runButton" class="icon-run group-start-stop">
				<span data-i18n-text="Run"></span>
			</button>
			<button title="Stop the blocks" id="stopButton" class="icon-stop group-start-stop">
				<span data-i18n-text="Stop"></span>
			</button>
			<button title="Open the summary panel" id="showSummary" class="icon-summary group-summary">
				<span data-i18n-text="Summary"></span>
			</button>
			<button title="Switch to editing mode" id="showEdit" class="icon-edit group-summary">
				<span data-i18n-text="Edit"></span>
			</button>
		</div>
		<div class="right-header">
			<div class="intro-login-logout">
				<div id="client-logged-in">
					<div id="main-logout">
						<ul id="main-account" class="nav-menu main-nav">
							<li class="account">
								<a href="javascript:;">
									<div class="main-account">
										<div class="account-type"></div>
										<div class="account-id"></div>
										<div class="topMenuBalance">0</div>
									</div>
									<div class="nav-caret"></div>
								</a>
							</li>
						</ul>
						<ul id="all-accounts" class="nav-menu main-nav">
							<li class="account">
								<a href="javascript:;">
									<div class="main-account">
										<div class="account-type"></div>
										<div class="account-id"></div>
										<div class="topMenuBalance">0</div>
									</div>
									<div class="nav-caret"></div>
								</a>
								<ul>
									<div class="login-id-list"></div>
									<a href="javascript:;" id="btn_logout" class="logout">
										<li id="logout" data-i18n-text="Sign out"></li>
									</a>
								</ul>
							</li>
						</ul>
					</div>
				</div>
				<div>
					<a class="button">
						<span id="login" data-i18n-text="Log in"></span>
					</a>
				</div>
			</div>
		</div>
	</div>
	<div id="container">
		<div id="summaryPanel" class="panel">
			<div class="panelExitButton">
				<p class="icon-close"></p>
			</div>
			<div class="description">
				<h4 data-i18n-text="Results"></h4>
			</div>
			<div class="content">
				<h4>
          <span data-i18n-text="Summary"></span>
        </h4>
				<table id="summaryDisplay">
					<thead>
						<tr>
							<th data-i18n-text="No. of runs"></th>
							<th data-i18n-text="Total Stake"></th>
							<th data-i18n-text="Total Payout"></th>
							<th data-i18n-text="Win"></th>
							<th data-i18n-text="Loss"></th>
							<th data-i18n-text="Total Profit/Loss"></th>
							<th data-i18n-text="Balance"></th>
						</tr>
					</thead>
					<tbody>
						<tr>
							<td class="totalRuns"></td>
							<td class="totalStake"></td>
							<td class="totalPayout"></td>
							<td class="totalWins"></td>
							<td class="totalLosses"></td>
							<td class="totalProfit"></td>
							<td class="balance"></td>
						</tr>
					</tbody>
				</table>
				<h4>
          <span data-i18n-text="Trades"></span>
        </h4>
				<div class="table-scroll">
					<table id="tradesDisplay">
						<thead>
							<tr>
								<th><span data-i18n-text="Number"></span></th>
								<th><span data-i18n-text="Reference"></span></th>
								<th><span data-i18n-text="Trade Type"></span></th>
								<th><span data-i18n-text="Entry Spot"></span></th>
								<th><span data-i18n-text="Exit Spot"></span></th>
								<th><span data-i18n-text="Buy Price"></span></th>
								<th><span data-i18n-text="Final Price"></span></th>
								<th><span data-i18n-text="Profit/Loss"></span></th>
							</tr>
						</thead>
						<tbody>
						</tbody>
					</table>
				</div>
				<div id="chart"></div>
			</div>
		</div>
		<div id="fileBrowser" style="display: none">
			<form id="fileUploadForm">
				<input title="Open an already saved XML file and retrieve its blocks" type="file" id="files" accept=".xml" multiple/>
			</form>
		</div>
		<div id="saveAs" class="panel">
			<div class="panelExitButton">
				<p class="icon-close"></p>
			</div>
			<div class="description">
				<h4 data-i18n-text="Save blocks as"></h4>
			</div>
			<div class="content">
				<form id="saveAsForm">
					<span data-i18n-text="Filename"></span>: <input title="Choose filename for your blocks" type="text" id="saveAsFilename" value="binary-bot" />
					<div>
						<label title="Save your blocks individually in a collection. They will be added to your existing workspace (main blocks will be replaced) when loaded." for="Collection" data-i18n-text="Save As Collection" style="font-weight: normal"></label>
						<input title="Save your blocks individually in a collection. They will be added to your existing workspace (main blocks will be replaced) when loaded." name="Collection" type="checkbox" id="saveAsCollection" style="margin-left: 4px" />
						<button data-i18n-text="Save" type="submit" id="saveAsButton" style="float: right; padding: 6px; text-transform: uppercase;"></button>
					</div>
				</form>
			</div>
		</div>
		<div id="toolbox" class="actions_menu">
			<div class="group-menu">
				<div><button title="Open menu to select a block" id="openMenu" class="icon-menu" data-i18n-text="Menu"></button></div>
			</div>
			<div class="group-clean-up">
				<div><button title="Clean up" id="cleanUp" class="icon-sort" data-i18n-text="Clean Up"></button></div>
			</div>
			<div class="group-undo-redo">
				<div><button title="Undo the changes (Ctrl+Z)" id="undo" class="icon-undo" data-i18n-text="Undo"></button></div>
				<div><button title="Redo the changes (Ctrl+Shift+Z)" id="redo" class="icon-redo" data-i18n-text="Redo"></button></div>
			</div>
			<div class="group-zoom">
				<div><button title="Zoom In (Ctrl + +)" id="zoomIn" class="icon-zoom-in" data-i18n-text="Zoom In"></button></div>
				<div><button title="Zoom Out (Ctrl + -)" id="zoomOut" class="icon-zoom-out" data-i18n-text="Zoom Out"></button></div>
			</div>
			<div class="group-reset">
				<div><button title="Reset the blocks" id="resetButton" class="icon-reset" data-i18n-text="Reset"></button></div>
			</div>
		</div>
		<div id="blocklyDiv"></div>
	</div>

	{{> bundle}} {{> bot}}
	<script src="https://style.binary.com/binary.js"></script>

</body>

</html>
